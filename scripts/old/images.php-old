	header("Content-Type: text/plain; charset=UTF-8");
	
	function ImgHash($img){
		$file_link = SITE_ROOT."/files/img/$img.png";
		if(file_exists($file_link)){
			$answer = md5_file($file_link);
		} else {
			$answer = "Image not found!";
	}
	return $answer;
	}
